@model ChatViewModel
<div class="row my-3">

    @foreach (var news in Model.News)
    {
    <div class="row">
        <div class="col-12 col-xl-8 mb-4 mb-lg-0">
            <div class="card">
                <h5 class="card-header">Chat & Posts</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <h1>@news.Nick; </h1>

                        <p>
                            @news.Message
                        </p>
                    </div>
                    <a href="#" class="btn btn-block btn-light">View all</a>
                </div>
            </div>
        </div>
    </div>
    }

        
